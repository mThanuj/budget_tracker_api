generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id                 String @id @default(uuid())
    name               String
    email              String @unique
    password_hash      String
    needs_percentage   Float
    wants_percentage   Float
    savings_percentage Float

    SubCategories SubCategories[]
    Expenses      Expenses[]

    @@map("users")
}

enum Categories {
    NEEDS
    WANTS
    SAVINGS

    @@map("categories")
}

model SubCategories {
    id   String @id @default(uuid())
    name String

    category Categories

    user     User       @relation(fields: [userId], references: [id])
    userId   String
    Expenses Expenses[]

    @@map("sub_categories")
}

model Expenses {
    id String @id @default(uuid())

    amount      Float
    description String

    user   User   @relation(fields: [userId], references: [id])
    userId String

    subCategory     SubCategories @relation(fields: [subCategoriesId], references: [id])
    subCategoriesId String

    @@map("expenses")
}
